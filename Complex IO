#include <iostream>
#include <fstream>
#include <string>
#include <iomanip>
using namespace std;

float get_vehicle_price(string);
float calculate_other_costs(float);
float calculate_sales_tax(float);
float calculate_registration_fee(float);
const int administrative_fee = 240;
const int cost_of_tags = 120;
void display_total_car_cost(string,float,float,float);

int main() 
{
  string car1,car2,car3,car4;
  float price1,price2,price3,price4;
  float other_costs, total_cost;
  cout << fixed << showpoint;
  ifstream myfile;
  myfile.open("infile.txt");
  getline(myfile, car1);
  getline(myfile, car2);
  getline(myfile, car3);
  getline(myfile, car4);
  price1=get_vehicle_price(car1);
  price2=get_vehicle_price(car2);
  price3=get_vehicle_price(car3);
  price4=get_vehicle_price(car4);
  cout<< "*********************************"<< endl;
	cout<< "Kishor Subedi"<< endl;
	cout<< "February 8, 2017"<< endl;
	cout<< "Quiz 2A " << endl;
	cout<< "Program for HU used cars" << endl << endl;
	cout<< "*********************************"<< endl<< endl;
	cout<< setw(40)<< "Howard University Used Car Company" << endl << endl;
	cout<< setw(15)<< "make_model" << setw(10)<<"Price"<< setw(14)<<"Other costs" << setw(14) <<"Total cost" << endl << endl;
  other_costs = calculate_other_costs(price1);
  total_cost = price1 + other_costs;
  display_total_car_cost(car1, price1, other_costs, total_cost);
  other_costs = calculate_other_costs(price2);
  total_cost = price2 + other_costs;
  display_total_car_cost(car2, price2, other_costs, total_cost);
  other_costs = calculate_other_costs(price3);
  total_cost = price3 + other_costs;
  display_total_car_cost(car3, price3, other_costs, total_cost);
  other_costs = calculate_other_costs(price4);
  total_cost = price4 + other_costs;
  display_total_car_cost(car4, price4, other_costs, total_cost);
return 0; 
}

float get_vehicle_price(string carname){
  float price;
  cout<< "Enter the price of the " << carname << endl;
  cin>> price;
  return price;
}

float calculate_other_costs(float x){
  return calculate_sales_tax(x) + calculate_registration_fee(x);
}

float calculate_sales_tax(float y){
  return y*0.06;
}

float calculate_registration_fee(float z){
  return (z*0.10)+administrative_fee + cost_of_tags;
}
  
void  display_total_car_cost(string make_model,float price,float other_cost,float total_price){
  cout<< setw(15)<< make_model << setw(10) << setprecision(2)<<price<< setw(14) << setprecision(2)<<other_cost << setw(14) << setprecision(2) <<total_price << endl << endl;
}
