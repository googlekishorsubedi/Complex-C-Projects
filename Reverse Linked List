#include <iostream>
using namespace std ;


struct nodetype
{
  int info ;
  nodetype* next ;
};

class linkedlist
{
  public:
    nodetype* head = NULL ;
    
    void insert(int data, int index)
    {
      nodetype* curr = head ;
      nodetype* prev = NULL ;
      while(curr != NULL)
      {
        prev = curr ;
        curr = curr -> next ;
      }
      curr = new nodetype;
      curr -> info = data ;
      if(index == 0){
        head = curr ;
        head -> next = NULL ;
        return ;
      }
      prev -> next = curr ;
      curr -> next = NULL ;
    }
  
    void print()
    {
      nodetype* curr = head ;
      while(curr != NULL)
      {
        cout << curr -> info << endl;
        curr = curr -> next ;
      }
      cout << endl << endl ;
    }
    
    void reverse()
    {
      nodetype* prev = NULL;
      nodetype* curr = head;
      
      while (curr != NULL)
      {
        nodetype* nextptr = curr -> next ;
        curr -> next = prev ;
        prev = curr ;
        curr = nextptr ;
        
      }
      head = prev ;
      
    }
    
    
};
int main()
{
  linkedlist l1 ;
  l1.insert(100,0);
  l1.insert(200,1);
  l1.insert(300, 2) ;
  l1.insert(400,3) ;
  
  l1.print() ;
  
  l1. reverse() ;
  l1.print() ;
  return 0;
}






