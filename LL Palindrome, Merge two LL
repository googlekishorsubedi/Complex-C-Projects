#include <iostream>
#include <fstream>
#include <string>
#include <vector>
using namespace std;

struct node
{
  int info;
  node* next ;
};

class linkedlist
{
  public:
    node* firstptr = NULL ;
    ~linkedlist()
    {
      while(firstptr){
        node* hold = firstptr -> next ;
        delete firstptr ;
        firstptr = hold ;
      }
    }
    
    void insert(int x )
    {
      if (!firstptr)
      {
        firstptr = new node;
        firstptr -> info = x ;
        firstptr -> next = NULL ;
      }
      else
      {
        node* curr ;
        for(curr = firstptr; curr -> next != NULL ; curr = curr -> next);
        curr -> next = new node;
        curr -> next -> info = x ;
        curr -> next -> next = NULL ;
      }
    }
    
    void print()
    {
      node* curr = firstptr;
      while(curr)
      {
        cout << curr -> info << endl;
        curr = curr -> next ;
      }
      cout << endl << endl ;
    }
    bool palindrome_check()
    {
      vector <int> myvector ;
      node* curr = firstptr;
      while(curr != NULL)
      {
        myvector.push_back(curr-> info);
        curr = curr -> next ;
      }
      
      int i = 0 ;
      while( i < myvector.size()/2 )
      {
        if(myvector[i] != myvector[myvector.size() - i - 1])
          return false;
        i ++ ;
      }
      return true ;
    }
    
};

node* merger(node* l1head, node* l2head)
{
    node* finalhead = l1head ;
    
    node* slider = l2head ;
    while(slider != NULL)
    {
        if (slider->info <= l1head -> info)
        {
            node* hold = slider -> next ;
            slider -> next = l1head ;
            l1head = slider ;
            finalhead = l1head ;
            slider = hold ;
        }
        else
        {
            node* prev = l1head ;
            node* curr = prev -> next;
            
            while(curr != NULL and curr -> info < slider -> info)
            {
                prev =curr ;
                curr = curr -> next ;
            }
            node* hold = slider -> next ;
            prev -> next = slider ;
            slider -> next = curr ;
            slider = hold ;
        }
    }
    return finalhead ;
}

int main()
{
    linkedlist l1 ;
    l1.insert(1);
    l1.insert(2);
    l1.insert(3);
    l1.insert(4);
    l1.insert(5) ;
    l1.insert(6) ;
    l1.insert(9) ;
    
    l1.print() ;
    
    linkedlist l2;
    l2.insert(0);
    l2.insert(4);
    l2.insert(10);
    
    node* temp = merger(l1.firstptr, l2.firstptr) ;
    while(temp)
    {
        cout << temp -> info << endl ;
        temp = temp -> next ;
    }
    return 0;
}

